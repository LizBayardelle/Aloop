<style>
  .btn {
    box-shadow: 3px 3px 8px -1px #000000;
    display: inline-block;
    cursor: pointer;
    color: #ffffff !important;
    font-size: 17px;
    font-weight: bold;
    padding:15px 30px;
    text-decoration:none;
    text-shadow:0px 1px 3px #000000;

    background-color: $color-silver;
    background: linear-gradient(to bottom, #9c9c9c 5%, #b0b0b0 100%);
  }

  .btn-blue, .btn.blue {
    background-color: $color-blue;
    background: linear-gradient(to bottom, #001dd7 5%, #1b36d1 100%);
  }

  .btn-blue:hover, .btn.blue:hover {
    background:linear-gradient(to bottom, #1b36d1 5%, #001dd7 100%);
    background-color:#1b36d1;
  }

  .text-center { text-align: center; }
</style>



<div class="row devise-page" style="padding-top: 40px">

  <h2 style="text-align: center; padding-bottom: 20px">Edit My Information</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <div class="row text-left">
      <div class="col-6">
        <%= f.label "First Name" %>
        <%= f.text_field :first_name, class: "form-control", input_html: { autocomplete: "fname" } %>
      </div>
      <div class="col-6">
        <%= f.label "Last Name" %>
        <%= f.text_field :last_name, class: "form-control", input_html: { autocomplete: "lname" } %>
      </div>
      <div class="col-12 py-3">
        <%= f.label "Author Bio" %>
        <%= f.text_area :bio, class: "form-control" %>
      </div> <!-- col -->

      <div class="col-12 py-3">
        <%= f.label "Profile Image URL" %>
        <%= f.text_field :avatar_url, class: "form-control"  %>
      </div> <!-- col -->

      <div class="col-12">
        <%= f.label "Current Password" %>
        <%= f.password_field :current_password, required: true, class: "form-control" %>
        <p><small><em>We need your current password to confirm your changes.</em></small></p>
      </div>

      </div> <!-- row -->

      <div class="text-center">
        <%= f.button :submit, "Update", class: "btn blue" %>
      </div>

  <% end %>

</div> <!-- row -->
