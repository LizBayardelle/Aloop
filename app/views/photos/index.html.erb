<header class="bgimage" style="background: url(<%= asset_url("polaris_11.jpg") %>)">
  <div class="index-only-text w-100">
    <div class="container py-3">
      <h3>Customer Photo Gallery</h3>
    </div> <!-- container -->
  </div> <!-- index text row -->
</header>





<div class="background-white pt-4">
  <div class="container">

      <% if current_spree_user && current_spree_user.admin? %>
        <h2 class="small-h2 text-center">ADMIN AREA: New Gallery Submissions</h2>
        <p class="text-center">Click on each picture to approve, edit, or reject it.</p>

        <div class="row">
          <% @unapproved_photos.each do |photo| %>
             <div class="col-12 col-sm-3 col-md-2 col-lg-1 big-div">
                  <a href="#<%= photo.id %>" class="open-popup-link">
                       <div class="snapshot">
                         <% if photo.image.attached? %>
                            <%= image_tag url_for(photo.image) %>
                          <% end %>
                       </div> <!-- snapshot -->
                  </a>
             </div> <!-- column -->

             <div id="<%= photo.id %>" class="image-popup mfp-hide text-center">
                <% if photo.image.attached? %>
                  <%= image_tag url_for(photo.image), class: "popup-picture", style: "margin-bottom: 30px" %>
                <% end %>
                  <p><%= photo.comments %></p>
                  <!-- <h3><strong>Submitted by: </strong><%#= photo.user.first_name %></h3> -->
                    <div class="row">
                    	<div class="col-xs-4 col-sm-2 col-sm-push-3">
        		            <%= link_to edit_photo_path(photo) do %>
        		                  <i class="icon large ion-edit"></i>
        		                  <br>Edit This Photo
        		            <% end %>
        	            </div> <!-- column -->
        	            <div class="col-xs-4 col-sm-2 col-sm-push-3">
        		            <%= link_to approve_photo_path(photo), method: :put, style: "color: green" do %>
        		            	<i class="icon large ion-checkmark-round"></i>
        		            	<br>Approve This Photo
        		            <% end %>
        	            </div> <!-- column -->
        	            <div class="col-xs-4 col-sm-2 col-sm-push-3">
        		            <%= link_to photo_path(photo), method: :delete, data: {confirm: "Are you sure you want to delete this photo?"}, style: "color: red" do %>
        		            	<i class="icon large ion-trash-a"></i>
        		            	<br>Delete This Photo
        		            <% end %>
        	            </div> <!-- column -->
                    </div> <!-- approval row -->
             </div>  <!-- mfp contents -->
          <% end %>
        </div> <!-- row -->

        <hr />

      <% end %>
    </div> <!-- row -->
</div> <!-- container -->





