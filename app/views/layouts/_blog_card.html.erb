<div class="col-lg-4 col-md-6 mb-md-0 mb-4"> <!-- Grid column -->

  <div class="view overlay rounded z-depth-2 mb-3">
    <% if blog.image.attached? %>
      <img class="img-fluid" src="<%= polymorphic_url(blog.image) %>" alt="Sample image">
    <% end %>
    <%= link_to blog do %>
      <div class="mask rgba-white-slight"></div>
    <% end %>
  </div> <!-- Featured image -->

  <a href="#!" class="red-text">
    <h6 class="font-weight-bold">
      <% blog.subcategories.each do |sub| %>
        <%= link_to sub.title, subcategory_path(sub.id) %>
      <% end %>
    </h6>
  </a> <!-- Category -->

  <%= link_to blog do %>
    <h3 class="font-weight-bold mb-0 pb-0"><strong><%= blog.title %></strong></h3>
  <% end %>
  <p class="mb-1"><em>by <%= Spree::User.find(blog.spree_user_id).email %><% if blog.published_at %>, <%= blog.published_at.strftime("%b %e, %Y") %><% end %></em></p>
  <p class="dark-grey-text small-line-height">
    <%= blog.teaser %>
    <% if current_spree_user && current_spree_user.admin? %>
      <br><small>
        <%= link_to 'Edit', edit_blog_path(blog) %>
        &nbsp;&nbsp;|&nbsp;&nbsp;
        <%= link_to 'Delete', blog_path(blog), method: :delete, data: { confirm: 'Are you sure you want to delete that blog?'} %>
      </small>
    <% end %>
  </p>

</div> <!-- Grid column -->
